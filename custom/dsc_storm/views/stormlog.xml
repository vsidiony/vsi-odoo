<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="view_dsc_storm_log_kanban" model="ir.ui.view">
            <field name="name">dsc.storm.log.kanban</field>
            <field name="model">dsc.storm.log</field>
            <field name="arch" type="xml">
                <kanban>
                    <field name="id"/>
                    <field name="name" />
                    <field name="storm_type" />
                    <field name="start_date" />  
                    <field name="description" />  
                    <field name="location" />  
                    <templates>
                        <t t-name="kanban-box">
                            <div t-attf-class="oe_kanban_global_click">
                                <div class="oe_kanban_details">
                                    <ul>
                                        <li><field name="name" /></li>
                                        <li><field name="storm_type" /></li>
                                        <li><field name="start_date" /></li>
                                        <li><field name="location" /></li>
                                        <li><field name="description" /></li>
                             
                                    </ul>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <record id="view_dsc_storm_log_form" model="ir.ui.view">
            <field name="name">dsc.storm.log.form</field>
            <field name="model">dsc.storm.log</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <button name="action_ongoing" id="button_ongoing" string="Start" class="btn-primary" type="object" states="build,done" />
                        <button name="action_done" id="button_done" string="Done" class="btn-primary" type="object" states="build,ongoing"/>
                        <field name="state" widget="statusbar" options="{'clickable':'1'}"
                            statusbar_visible="build,ongoing,done" />
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="storm_code" readonly="1" />
                            </h1>
                        </div>
                        <group>
                            <group> 
                                <field name="name" />
                                <field name="storm_type" />       
                            </group>
                            <group>   
                                <field name="start_date" />    
                                <field name="manager_id" />      
                            </group>
                        </group> 
                        <group>
                            <field name="description" />
                            <field name="location" />
                        </group>                   
                    </sheet>  
                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                    </div>   
                </form>
            </field>
        </record>

         <record id="view_dsc_storm_log_tree" model="ir.ui.view">
            <field name="name">dsc.storm.log.tree</field>
            <field name="model">dsc.storm.log</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="storm_code" />
                    <field name="name" />
                    <field name="storm_type" />
                    <field name="start_date" />  
                    <field name="manager_id" />
                    <field name="description" />  
                    <field name="location" />  
                    <field name="state" />
                 
                </tree>
            </field>
        </record>

        <record id="view_dsc_storm_log_search" model="ir.ui.view">
            <field name="name">dsc.storm.log.search</field>
            <field name="model">dsc.storm.log</field>
            <field name="arch" type="xml">
                <search string="Search Storm Log">                    
                    <field name="storm_type" />
                    <field name="description" />
                    <field name="location" />
                    <separator/>
                    <filter string="Wind Storm" name="storm_type" domain="[('storm_type','=','wind_storm')]" />
                    <group expand="1" string="Group By">
                        <filter string="Storm Type" name="s_storm_type" context="{'group_by':'storm_type'}" />
                        <filter string="Start Date" name="s_start_date" context="{'group_by':'start_date'}" />
                    </group>
                </search>
            </field>
        </record>

        <record id="dsc_storm.action_window" model="ir.actions.act_window">
            <field name="name">DSC Storm</field>
            <field name="res_model">dsc.storm.log</field>
            <field name="view_mode">tree,kanban,form</field>
        </record>

        <!-- Top menu item -->
        <menuitem id="dsc_storm.menu_root" name="DSC Storm" web_icon="dsc_storm,static/description/icon.png" />

        <menuitem id="dsc_storm.log_root" name="Storm Log" parent="dsc_storm.menu_root" sequence="2" />

        <menuitem id="dsc_storm.log" name="Storm Log" parent="dsc_storm.log_root" action="dsc_storm.action_window" sequence="3" />

        <!-- <menuitem id="dsc_storm.settings" name="Settings" parent="dsc_storm.log_root" action="dsc_storm_config_settings" sequence="4" /> -->
    </data>
</odoo>

