<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="view_dsc_workentry_form" model="ir.ui.view">
            <field name="name">dsc.workentry.form</field>
            <field name="model">dsc.work.entry</field>
            <field name="arch" type="xml">
                <form>        
                    <sheet>
                        <div class="oe_title">
                            <h1>
                               <field name="name" readonly="1" />
                            </h1>
                        </div>
                        <group>
                            <group> 
                                <field name="employee_id" />                               
                                <field name="time_in" />
                                <field name="time_out" />    
                                <field name="totalworked_hours" />     
                                <field name="regularworked_hours" />     
                                <field name="overtimeworked_hours" />     
                                <field name="nightdifferential_hours" />    
                            </group>
                            <group>   
                               
                            </group>
                        </group>                                   
                    </sheet>   
                </form>
            </field>
        </record>

        <record id="view_dsc_workentry_tree" model="ir.ui.view">
            <field name="name">dsc.workentry.tree</field>
            <field name="model">dsc.work.entry</field>
            <field name="arch" type="xml">
                <tree>   
                  <header>
                        <button name="action_copy_from_attendance" string="Copy from Attendance" class="btn-primary" type="object"/>   
                    </header>      
                    <field name="employee_id" />
                    <field name="time_in" />
                    <field name="time_out" />
                    <field name="totalworked_hours" />  
                    <field name="regularworked_hours" />     
                    <field name="overtimeworked_hours" />     
                    <field name="nightdifferential_hours" /> 
                    <field name="state" />                      
                </tree>
            </field>
        </record>

        <record id="view_dsc_workentry_gantt" model="ir.ui.view">
            <field name="name">dsc.workentry.gantt</field>
            <field name="model">dsc.work.entry</field>
            <field name="arch" type="xml">
                <gantt string="Work Entries"
                    date_start="time_in"
                    date_stop="time_out"
                    color="employee_id"
                    default_group_by='employee_id'                 
                    scales="day,week,month"
                    precision="{'day': 'hour:quarter', 'week': 'day:half', 'month': 'day:half'}"
                    plan="0"
                    sample="1">
                    <header>
                        <button name="action_copy_from_attendance" string="Copy from Attendance" class="btn-primary" type="object"/>   
                    </header>   
                    <field name="state"/>
                    <field name="employee_id"/>
                    <field name="name"/>
                </gantt>
            </field>
        </record>

        <record id="dsc_workentry.action_window" model="ir.actions.act_window">
            <field name="name">VSI Work Entries</field>
            <field name="res_model">dsc.work.entry</field>
            <field name="view_mode">gantt,tree,form</field>
        </record>

        <menuitem id="dsc_workentry.workentry" 
        name="VSI Work Entries" 
        parent="hr_work_entry_contract.menu_hr_payroll_work_entries_root" 
        action="dsc_workentry.action_window" 
        sequence="3" />

    </data>
</odoo>