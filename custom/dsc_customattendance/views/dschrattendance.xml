<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        
 <record id="view_dsc_customattendance_form" model="ir.ui.view">
            <field name="name">dsc.attendance.form</field>
            <field name="model">dsc.attendance</field>
            <field name="arch" type="xml">
                <form>        
                       <header>
                        <!-- <button name="action_draft" id="button_draft" string="Draft" class="btn-primary" type="object" states="validated,conflict,cancelled" /> -->
                        <button name="action_validated" id="button_validated" string="Validated" class="btn-primary" type="object" states="draft,conflict,cancelled"/>                        
                        <!-- <button name="action_conflict" id="button_conflict" string="Conflict" class="btn-primary" type="object" states="draft,validated,cancelled"/>                     -->
                        <button name="action_cancelled" id="button_cancelled" string="Cancelled" class="btn-primary" type="object" states="draft,validated,conflict"/>
                        <field name="state" widget="statusbar" options="{'clickable':'1'}" statusbar_visible="draft,validated,conflict,cancelled" />
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <h1>
                               <field name="name" readonly="1" />
                            </h1>
                        </div>
                        <group>
                            <group> 
                                <field name="employee_id" />                               
                                <field name="time_in" />
                                <field name="time_out" />    
                                <!-- <field name="totalworked_hours" />     
                                <field name="regularworked_hours" />     
                                <field name="overtimeworked_hours" />     
                                <field name="nightdifferential_hours" />     -->
                            </group>
                            <group>   
                               
                            </group>
                        </group>                                   
                    </sheet>   
                </form>
            </field>
        </record>

         <record id="view_dsc_customattendance_tree" model="ir.ui.view">
            <field name="name">dsc.attendance.tree</field>
            <field name="model">dsc.attendance</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="employee_id" />
                    <field name="time_in" />
                    <field name="time_out" />
                    <field name="totalworked_hours" />  
                    <field name="regularworked_hours" />     
                    <field name="overtimeworked_hours" />     
                    <field name="nightdifferential_hours" /> 
                    <field name="state" />                      
                </tree>
            </field>
        </record>

        <record id="dsc_customattendance.action_window" model="ir.actions.act_window">
            <field name="name">DSC Custom Attendance</field>
            <field name="res_model">dsc.attendance</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem id="dsc_customattendance.attendance" 
        name="DSC Custom Attendance" 
        parent="hr_attendance.menu_hr_attendance_manage_attendances" 
        action="dsc_customattendance.action_window" 
        sequence="3" />
    </data>
</odoo>